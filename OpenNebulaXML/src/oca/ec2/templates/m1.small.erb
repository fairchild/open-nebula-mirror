
NAME   = eco-vm

CPU    = 0.2
MEMORY = 256

OS = [ kernel     = /vmlinuz,
       initrd     = /initrd.img,
       root       = sda1,
       kernel_cmd = "ro xencons=tty console=tty1"]

DISK = [ source   = <%= @vm_info[:img_path] %>,
         clone    = no,
         target   = sda1,
         readonly = no]


IMAGE_ID = <%= @vm_info[:img_id] %>
INSTANCE_TYPE = m1.small

